<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/headerOriginal') %>
			<!-- /Header -->

			<!-- Novedades -->

			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
								<h2 class="products-title">Resultados para "<%= search %>"</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% if (productos.length===0) { %>
						<p>No hay resultados para su criterio de busqueda.</p>
					<% } else { %>
						<% for (let i=0; i < productos.length; i++) { %>
								<div class="col-12 col-sm-6 col-lg-3">
									<section class="product-box">
										<a href="/product/product/<%= productos[i].id %>">
											<figure class="product-box_image">
												<img src="./images/products/<%= productos[i].imagen_producto %>"
													alt="<%= productos[i].nombre_producto %>">
											</figure>
											<article class="product-box_data">
												<h2>
													<%= productos[i].nombre_producto %>
												</h2>
												<p>
													<%= productos[i].descripcion %>
												</p>
												<p>Comentarios: <%= productos[i].comentarios.length %>
												</p>

											</article>
										</a>
									</section>
								</div>
						<% } %>
					<% } %>


				</div>
			</div>


			<!-- footer -->
			<%- include('./partials/footer') %>
				<!-- /footer -->
	</body>

</html>